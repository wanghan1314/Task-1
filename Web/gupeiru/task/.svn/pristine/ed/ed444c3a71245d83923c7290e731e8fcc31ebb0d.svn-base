html{
	font-size: 62.5%;
}
body{
	width: 100%;
	height: 100vw;
}
*{
	margin: 0;
	padding: 0;
}
.head{
	position: fixed;
	top: 0;
	width: 100%;
    height: 70px;
    line-height: 70px;
	background: #68cdd5;
	z-index: 2;
}
.left{
	position: absolute;
	top: 50%;
	left: 10px;
	transform: translateY(-50%);
    font-size: 2rem; 
	color: #fff;
}
.middle{
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%,-50%);
	font-size: 2.3rem;
	font-weight: bold;
	color: #fff;
}
.main-top{
	position: relative;
	width: 100%;
	height: 350px;
	background-image: url(images/doctor.png);
	background-repeat: no-repeat;
	background-size: cover;
}
.photo{
	position: absolute;
	top: 63%;
	transform: translateY(-63%);
	width: 8rem;
	margin-left: 1.5rem;
}
.name-box{
	position: absolute;
	top: 63%;
	transform: translateY(-63%);
	z-index: 1;
	height: 5rem;
	margin-left: 10rem;
}
.name{
	font-size: 1.8rem;
	font-weight: bold;
	color: #fff;
	margin-bottom: .5rem;
}
.name-address{
	height: 3rem;
	font-size: 1.6rem;
	color: #fff;
	text-indent: 2rem;
	letter-spacing:.3rem;
	background-image: url(images/add.png);
	background-repeat: no-repeat;
}
.click-message{
	margin: 10px auto;
	width: 95%;
	height: 60px;
	font-size: 2.3rem;
	font-weight: bold;
	cursor:pointer;
	background-color:#fff;
	border:3px solid #68cdd5;
	outline: none;
	color: #68cdd5;
	border-radius: 10px;
}
.click-contact{
	margin: 10px auto;
	width: 95%;
	height: 60px;
	font-size: 2.3rem;
	font-weight: bold;
	color: #fff;
	background-color:#68cdd5;
	border:3px solid #68cdd5;
	outline: none;
	cursor:pointer;
	border-radius: 10px;
}
.foot{
	position: fixed;
	bottom: 0;
	width: 100%;
    height: 80px;
	background: #fff;
	z-index: 0;
}
.box{
	float: left;
	width: 50%;
	height: 80px;
	text-align: center;
}
.table-style{
	width: 100%;
	border-collapse: collapse;
	vertical-align: middle;
}
.skill{
	padding-left: 2rem;
	background-image: url(images/blue.png);
	background-repeat: no-repeat;
	background-position: 1rem center;
}
.star-style{
	margin-left: 2rem;
	margin-right: 0.5rem;
	width: 1.2rem;
}
.td-right{
	height: 5rem;
	font-size: 1.6rem;
	font-weight: bold;
	border-bottom: 1px solid #ccc;
}
.td-left{
	height: 5rem;
	width: 10rem;
	font-size: 1.6rem;
	font-weight: bold;
	color: #ccc;
	text-indent: 2rem;
	border-bottom: 1px solid #ccc;
}
.red{
	color: #f00;
}
.main{
	margin-bottom: 9rem;
}
.element{
	display: none;
	position: absolute;
	top: 70px;
	z-index: 1;
}
.father:hover .element{
	display: block;
}


