/* pages/result/result.wxss */
.title {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 6px;
}

.box {
  width: 98%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border-top: 1px solid #d7d8d7;
  padding: 6px 0;
  margin: 0 1%;
}
.box:first-child {
  border-top: none;
}
.box:last-child {
  border-bottom: 1px solid #d7d8d7;
}
.titlebox {
  width: 28%;
}
.contentbox {
  width: 70%;
}
.content-inbox {
  width: 100%;
}

.swiper-tab{ 
 width: 100%; 
 text-align: center; 
 line-height: 80rpx; 
 border-bottom: 1px solid #d7d8d7; 
 display: flex; 
 flex-direction: row; 
 justify-content: center; 
} 
.tab-item{ 
 flex: 1; 
 font-size: 30rpx; 
 display: inline-block;  
 color: #777777; 
} 
.on{ 
 color: #02ae00; 
 border-bottom: 5rpx solid #02ae00; 
} 
.swiper{ 
  display: block; 
  width: 100%; 
} 