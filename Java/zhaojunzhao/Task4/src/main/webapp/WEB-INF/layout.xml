<tiles-definitions>
    <definition name="homepage" template="/WEB-INF/jsp/home.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/header.jsp" />
        <put-attribute name="body" value="/WEB-INF/jsp/homeContent.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/jsp/footer.jsp" />
    </definition>

    <definition name="jobpage" extends="homepage">
        <put-attribute name="body" value="/WEB-INF/jsp/jobContent.jsp"/>
    </definition>

    <definition name="loginPage" extends="homepage">
        <put-attribute name="body" value="/WEB-INF/jsp/loginContent.jsp"/>
    </definition>

    <definition name="studentPage" extends="homepage">
        <put-attribute name="body" value="/WEB-INF/jsp/studentContent.jsp"/>
    </definition>

    <definition name="signPage" extends="homepage">
        <put-attribute name="body" value="/WEB-INF/jsp/signupContent.jsp"/>
    </definition>
