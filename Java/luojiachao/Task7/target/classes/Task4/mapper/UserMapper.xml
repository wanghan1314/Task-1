    <!--注意这里的参数类型是parameterType而不是parameterMap，因为返回的是单个类型  -->
    <select id="findUserByName"  parameterType="map"  resultType="Task4.pojo.User">
        select username from xiuzhenyuan  where username=#{username} or phone=#{phone} or email=#{email} and password=#{password}
    </select>
