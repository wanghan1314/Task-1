<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="task.dao.StudentDao">
    <insert id="insertStudent" parameterType="task.pojo.Student" >
	        insert into student
	        values (#{createAt},#{updateAt},#{id},#{name},#{qq},
      #{studyType},#{joinTime},#{university},#{studyId},#{dailyLink},#{slogen},#{master} )
	</insert>
    <!--按照study_id删除数据-->
    <delete id="deleteStudent" parameterType="String" >
		delete from student where study_id = #{studyId}
    </delete>

    <!--修改数据，根据study_id-->
    <update id="updateStudent" parameterType="task.pojo.Student" >
		update student set slogen= #{slogen},daily_link=#{dailyLink},master=#{master}
		where study_id=#{studyId}
    </update>

    <!--查询数据，根据study_id-->
    <select id="selectStudent" parameterType="task.pojo.Student" resultMap="studentResult">
		select * from student  where study_id=#{studyId}
    </select>

    <!--查询数据，全部数据，用list存储-->
    <select id="selectAllStudent"  resultMap="studentResult">
		select * from student
    </select>

    <resultMap id="studentResult" type="task.pojo.Student">
        <id property="studyId" column="study_id"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
        <result property="name" column="name"/>
        <result property="qq" column="qq"/>
        <result property="studyType" column="study_type"/>
        <result property="joinTime" column="join_time"/>
        <result property="university" column="university"/>
        <result property="studyId" column="study_id"/>
        <result property="dailyLink" column="daily_link"/>
        <result property="slogen" column="slogen"/>
        <result property="master" column="master"/>
    </resultMap>

</mapper>