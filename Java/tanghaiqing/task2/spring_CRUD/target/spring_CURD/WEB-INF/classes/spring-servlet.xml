            <!--<aop:before method="logController" pointcut="execution(* com.admincrud.service.*.*(..))"/>-->
        <!--</aop:aspect>-->
    <!--</aop:config>-->
    <!--配置aop注解扫描-->
    <context:component-scan base-package="com.admincrud.aspect"/>
    <!--开启注解标记-->
    <aop:aspectj-autoproxy/>
    <!--Spring事务管理，定义事务管理bean-->
    <bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="ds"/>
    </bean>
    <!--开启transaction标记，将标记作用在具体的方法上-->
    <!--<tx:annotation-dirven transaction-manager="txManager"/>-->
</beans>