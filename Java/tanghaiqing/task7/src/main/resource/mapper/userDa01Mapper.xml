<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="task7.dao.UserDao1">
    <resultMap id="user" type="task7.pojo.UserImpl">
        <result property="userID" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="age" column="age"/>
        <result property="adminCode" column="adminCode"/>
        <result property="password" column="password"/>
        <result property="telephone" column="telephone"/>
        <result property="emailaccount" column="email_account"/>
        <result property="creatTime" column="creat_at"/>
        <result property="updateTime" column="update_at"/>
        <result property="image" column="image"/>
    </resultMap>
    <select id="queryUser1" parameterType="Integer" resultMap="user">
        select * from user where user_id=#{id}
    </select>
    <insert id="saveUser" parameterType="task7.pojo.UserImpl">
        insert into user (user_name,age,adminCode,password,telephone,email_account,creat_at,update_at,image)
        values (#{userName},#{age},#{adminCode},#{password},#{telephone},#{emailaccount},#{creatTime},#{updateTime},#{image})
    </insert>
    <update id="updateUser" parameterType="task7.pojo.UserImpl">
        update user set user_name=#{userName},age=#{age},adminCode=#{adminCode},
        telephone=#{telephone},email_account=#{emailaccount},update_at=#{updateTime},image=#{image}
        where user_id=#{userID}
    </update>

</mapper>