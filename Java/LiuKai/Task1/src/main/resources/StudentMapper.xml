<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--从mybaits官网上copy  http://www.mybatis.org/mybatis-3/zh/getting-started.html-->
<mapper namespace="mapper.StudentMapper">


    <resultMap id="StudentResultMapper" type="pojo.Student">
        <id property="id" column="id"/>
        <result property="stuName" column="stu_name"/>
        <result property="qqNum" column="qq_num"/>
        <result property="course" column="course"/>
        <result property="creat_at" column="creatTime"/>
        <result property="update_at" column="updateTime"/>
    </resultMap>

    <!--//增加学生-->
    <!--boolean insertStudent(Student student) ;-->
    <insert id="insertStudent" parameterType="pojo.Student">
        insert into student(stu_name,qq_num,course,create_at,update_at)
        values (#{stuName},#{qqNum},#{course},#{createTime},#{updateTime})
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
            select last_insert_id()
        </selectKey>
    </insert>

    <!--//根据id删除学生  后续添加其他方式删除数据-->
    <!--boolean deleteStudent(Student student);-->
    <delete id="deleteStudent">
        delete from student where id=#{id}
    </delete>

    <!--//根据id修改记录-->
    <!--boolean updateStudent(Student student);-->
    <update id="updateStudent">
            update student
        set stu_name=#{stuName},qq_num=#{qqNum},course=#{course},update_at=#{updateTime}
        where id=#{id}
    </update>

    <!--//根据id查找信息-->
    <!--Student findById(int id);-->
    <select id="findById" resultMap="StudentResultMapper">
        select * from student where id=#{id}
    </select>

    <!--//根据姓名模糊查询-->
    <!--List<Student> findByName(String stuName);-->
    <select id="findLikeName" resultMap="StudentResultMapper">

         select * from  student where stu_name like "%"#{value}"%"
    </select>

    <!--//删除所有信息-->
    <!--void deleteAll();-->
    <delete id="deleteAll">
        truncate student
--     delete  from  student
    </delete>
</mapper>
