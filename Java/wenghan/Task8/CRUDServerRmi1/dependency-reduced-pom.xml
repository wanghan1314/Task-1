<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>con.jnshu</groupId>
  <artifactId>CRUDServerRmi1</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <resource>META-INF/spring.handlers</resource>
                </transformer>
                <transformer>
                  <resource>META-INF/spring.schemas</resource>
                </transformer>
                <transformer>
                  <mainClass>com.myServer.MyServer</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <version>3.1.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <spring.version>4.0.5.RELEASE</spring.version>
    <aopalliance.version>1.0</aopalliance.version>
    <commons-io.version>1.3.2</commons-io.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <mybatis.version>3.1.1</mybatis.version>
    <maven.compiler.source>1.8</maven.compiler.source>
    <druid.version>1.0.18</druid.version>
    <junit.version>4.12</junit.version>
    <mysql.version>5.1.6</mysql.version>
    <jsqlparser.version>1.0</jsqlparser.version>
    <commons-fileupload.version>1.2.1</commons-fileupload.version>
    <maven.compiler.target>1.8</maven.compiler.target>
    <pagehelper.version>5.1.2-beta</pagehelper.version>
    <jstl.version>1.2</jstl.version>
    <jackson.version>1.2.7</jackson.version>
    <commons-logging.version>1.2</commons-logging.version>
    <servlet-api.version>3.1.0</servlet-api.version>
    <commons-lang.version>2.6</commons-lang.version>
    <log4j.version>1.2.16</log4j.version>
    <mybatis-generator.version>1.3.5</mybatis-generator.version>
    <mybatis.spring.version>1.2.3</mybatis.spring.version>
  </properties>
</project>

