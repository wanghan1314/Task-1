<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tiles.mapper.StudentsDao">
    <resultMap id="students" type="com.tiles.pojo.Students">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="stuIntroduction" column="stu_introduction"/>
        <result property="isStudy" column="is_study"/>
        <result property="isWork" column="is_work"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
    </resultMap>
<select id="getAllStudents" resultMap="students">
    SELECT * FROM students
</select>
    <select id="getStudyNumber" resultType="java.lang.Integer">
        SELECT COUNT(1) FROM students WHERE is_study='是'
    </select>
    <select id="getWorkNumber" resultType="java.lang.Integer">
        SELECT COUNT(1) FROM students WHERE is_work='是'
    </select>
</mapper>